<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:overScrollMode="never"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <include layout="@layout/toolbar_include"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/matrix"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/matrix2"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="32dp"
            />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btn_translate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Translate"
                android:textAllCaps="false"
                />

            <EditText
                android:id="@+id/et_translate_x"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="x"
                android:gravity="center"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                />

            <EditText
                android:id="@+id/et_translate_y"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="y"
                android:gravity="center"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重置"
                android:id="@+id/btn_reset"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btn_rotate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rotate"
                android:textAllCaps="false"
                />

            <EditText
                android:id="@+id/et_degree"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:hint="degree"
                android:gravity="center"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                />

            <EditText
                android:id="@+id/et_px"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:hint="px"
                android:gravity="center"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                />

            <EditText
                android:id="@+id/et_py"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:hint="py"
                android:gravity="center"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btn_scale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scale"
                android:textAllCaps="false"
                />



            <EditText
                android:id="@+id/et_scale_x"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:hint="sx"
                android:gravity="center"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                />

            <EditText
                android:id="@+id/et_scale_y"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:hint="sy"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/et_scale_px"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:hint="px"
                android:gravity="center"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                />

            <EditText
                android:id="@+id/et_scale_py"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:hint="py"
                android:gravity="center"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btn_skew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skew"
                android:textAllCaps="false"
                />



            <EditText
                android:id="@+id/et_skew_x"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:hint="sx"
                android:gravity="center"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                />

            <EditText
                android:id="@+id/et_skew_y"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:hint="sy"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/et_skew_px"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:hint="px"
                android:gravity="center"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                />

            <EditText
                android:id="@+id/et_skew_py"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:hint="py"
                android:gravity="center"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <EditText
                android:id="@+id/et_rect_left"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:hint="left"
                android:gravity="center"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                />

            <EditText
                android:id="@+id/et_rect_top"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:hint="top"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/et_rect_right"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:hint="right"
                android:gravity="center"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                />

            <EditText
                android:id="@+id/et_rect_bottom"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:hint="bottom"
                android:gravity="center"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                />

        </LinearLayout>

        <Button
            android:id="@+id/btn_map_rect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="mapRect"
            android:textAllCaps="false"
            />

        <com.example.hp.verifyimagination.verify.layout.funtion.VerifyMatrixView
            android:id="@+id/verify_matrix_view"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            />



    </LinearLayout>

</ScrollView>